pipeline{
    stages{
        stage('Git Clone')
        {
            steps{
                echo "check out simple-web-dar code"
                git branch: 'main',
                url: 'https://github.com/Darbuki/simple-web-dar'
            }
        }
        stage('deploy using helm')
        {
            steps{
                script{
                    sh "helm install simple-web-dar simple-web-dar"
                }
            }
        }
    }


}